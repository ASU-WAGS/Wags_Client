<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:us='urn:import:wags.magnet.view'
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
	xmlns:new="urn:import:org.gwtbootstrap3.client.ui">
	<ui:style>
	
	.allButtonPanel {
		background-color: #1abc9c;
		height: 40px;
	}

	.base {
		border: 3px solid #325c74;
		background-color: #fff;
		margin-left: auto;
		margin-right: auto;
	}

	.buttonPanelLeft {
		margin-right: 5%;
		display: inline;
	}

	.buttonPanelRight {
		margin-left: 5%;
		display: inline;
	}

	.column {
		margin-left: 0 !important;
		height: 100%;
		overflow: visible;
	}

	.directionsContent {
		margin-bottom: 1%;
	}

	.directionsPanel {
		-moz-border-radius: 5px;
		border-radius: 5px;
		font-family: "arial";
		background: #E6E6E6;
		padding-top: 1%;
		padding-right: 1%;
		padding-left: 1%;
		margin-top: 10px;
		margin-bottom: 10px;
		margin-right: auto;
		margin-left: auto;
		border: 1px solid AliceBlue;
		height: 95%;
		width: 95%;
		overflow: scroll;

	}

	.dragPanel {
		height: 60%;
	}

	.lgButton {
		margin-right: 1%;
		margin-left: 1%;
		margin-top: .7%;
		padding-top: 2px;
		width: 15%;
	}

	.smButton {
		margin-right: 1%;
		margin-left: 1%;
		margin-top: .7%;
		padding-top: 2px;
		width: 10%;
	}

	</ui:style>

	<b:Column size="12" styleName='{style.base}'>
	    <g:FlowPanel ui:field='layoutPanel' styleName='{style.base}'>
	    <b:FluidRow>
	    	<g:ScrollPanel styleName="{style.directionsPanel}">
	       		<g:AbsolutePanel styleName="{style.directionsContent}">
	       		    <new:Heading size="H4" ui:field="title" />
	       		    <b:Paragraph ui:field="instructions" />
	       		</g:AbsolutePanel>
	    	</g:ScrollPanel>
		</b:FluidRow>	
		<b:FluidRow styleName="{style.allButtonPanel}">
	    	<b:FluidRow styleName="{style.buttonPanelLeft}">
	        	<g:Button ui:field="backButton" styleName="{style.smButton}" height="28px">Back</g:Button>
	        	<g:Button ui:field="resetButton" styleName="{style.smButton}" height="28px">Reset</g:Button>
	    	</b:FluidRow>
	    	<b:FluidRow styleName="{style.buttonPanelRight}">
	      		<g:Button ui:field="addButton" styleName="{style.lgButton}" height="28px">Add Edge</g:Button>
	      		<g:Button ui:field="removeButton" styleName="{style.lgButton}" height="28px">Remove Edge</g:Button>
	       		<g:Button ui:field="evaluateButton" styleName="{style.lgButton}" height="28px">Evaluate</g:Button>
	   		</b:FluidRow>
	    </b:FluidRow>
	    <g:AbsolutePanel ui:field='dragPanel'/>
    </g:FlowPanel>
       </b:Column>
</ui:UiBinder> 

